<?xml version="1.0" encoding="utf-8"?>
<!-- Production Environment Configuration -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <connectionStrings>
    <!-- Production Database -->
    <add name="CafeMenu" 
         connectionString="metadata=res://*/CafeMenuModel.csdl|res://*/CafeMenuModel.ssdl|res://*/CafeMenuModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;Server=prod-sql-server.database.windows.net;Database=CafeMenu_Prod;User ID=produser;Password=#{ProdDbPassword}#;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;MultipleActiveResultSets=True;App=EntityFramework&quot;" 
         xdt:Transform="SetAttributes" 
         xdt:Locator="Match(name)" />
    <add name="CafeMenuEntities" 
         connectionString="metadata=res://*/CafeMenuModel.csdl|res://*/CafeMenuModel.ssdl|res://*/CafeMenuModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;Server=prod-sql-server.database.windows.net;Database=CafeMenu_Prod;User ID=produser;Password=#{ProdDbPassword}#;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;MultipleActiveResultSets=True;App=EntityFramework&quot;" 
         xdt:Transform="SetAttributes" 
         xdt:Locator="Match(name)" />
  </connectionStrings>
  
  <appSettings>
    <!-- Production specific settings -->
    <add key="Environment" value="Production" xdt:Transform="Insert" />
    <add key="LogLevel" value="Warning" xdt:Transform="Insert" />
    <add key="ApiBaseUrl" value="https://cafemenu.com/api/" xdt:Transform="Insert" />
    <add key="ExchangeRateApiKey" value="#{ExchangeRateApiKey}#" xdt:Transform="Insert" />
    <add key="CacheEnabled" value="true" xdt:Transform="Insert" />
    <add key="DetailedErrors" value="false" xdt:Transform="Insert" />
    <add key="EnableMinification" value="true" xdt:Transform="Insert" />
    <add key="CDNBaseUrl" value="https://cdn.cafemenu.com/" xdt:Transform="Insert" />
  </appSettings>
  
  <system.web>
    <!-- Disable debug mode for production -->
    <compilation debug="false" xdt:Transform="SetAttributes" />
    
    <!-- Custom errors for production -->
    <customErrors mode="On" defaultRedirect="~/Error" xdt:Transform="Insert">
      <error statusCode="404" redirect="~/Error/NotFound" />
      <error statusCode="500" redirect="~/Error/ServerError" />
    </customErrors>
    
    <!-- Production authentication settings -->
    <authentication mode="Forms">
      <forms timeout="60" requireSSL="true" xdt:Transform="SetAttributes" />
    </authentication>
    
    <!-- Security settings -->
    <httpCookies httpOnlyCookies="true" requireSSL="true" xdt:Transform="Insert" />
    <httpRuntime enableVersionHeader="false" xdt:Transform="SetAttributes" />
  </system.web>
  
  <system.webServer>
    <!-- Production security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <remove name="X-Powered-By" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite for HTTPS -->
    <rewrite>
      <rules>
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url="." />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
    </staticContent>
  </system.webServer>
</configuration>