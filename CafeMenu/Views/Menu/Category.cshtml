@model IEnumerable<Domain.DTOs.ProductDto>

@{
    ViewBag.Title = ViewBag.Category?.CategoryName + " - Kategorisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = ViewBag.Category as Domain.DTOs.CategoryDto;
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        <a href="@Url.Action("Index")" class="text-muted">
                            <i class="fas fa-arrow-left me-1"></i>
                            Menüye Dön
                        </a>
                    </div>
                    <h2 class="page-title">
                        <i class="fas fa-folder me-2 text-primary"></i>
                        @category?.CategoryName
                    </h2>
                    <div class="page-subtitle text-muted mt-1">
                        @if (Model.Any())
                        {
                            <span>@Model.Count() ürün bulundu</span>
                        }
                        else
                        {
                            <span>Bu kategoride henüz ürün yok</span>
                        }
                    </div>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="includeSubCategories" 
                                   @(ViewBag.IncludeSubCategories == true ? "checked" : "") 
                                   onchange="toggleSubCategories()">
                            <label class="form-check-label" for="includeSubCategories">
                                Alt kategorileri dahil et
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                            <div class="card h-100 card-hover">
                                @if (!string.IsNullOrEmpty(product.ImagePath))
                                {
                                    <img src="@product.ImagePath" class="card-img-top" alt="@product.ProductName" 
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class=\"card-img-top bg-light d-flex align-items-center justify-content-center\" style=\"height: 200px;\">
                                        <i class=\"fas fa-image fa-3x text-muted\"></i>
                                    </div>
                                }
                                
                                <div class=\"card-body d-flex flex-column\">
                                    <h5 class=\"card-title text-dark\">@product.ProductName</h5>
                                    
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <p class=\"card-text text-muted small flex-grow-1\">@product.Description</p>
                                    }
                                    
                                    <div class=\"mt-auto\">
                                        <div class=\"d-flex justify-content-between align-items-center\">
                                            <div>
                                                <span class=\"h5 text-primary mb-0\">
                                                    @if (ViewBag.ExchangeRate != null && (decimal)ViewBag.ExchangeRate != 1.0m)
                                                    {
                                                        <span>@((product.Price * (decimal)ViewBag.ExchangeRate).ToString(\"C\"))</span>
                                                        <br><small class=\"text-muted\">(@product.Price.ToString(\"C\", new System.Globalization.CultureInfo(\"tr-TR\")))</small>
                                                    }
                                                    else
                                                    {
                                                        <span>@product.Price.ToString(\"C\", new System.Globalization.CultureInfo(\"tr-TR\"))</span>
                                                    }
                                                </span>
                                            </div>
                                            <a href=\"@Url.Action(\"Product\", new { id = product.ID })\" class=\"btn btn-primary btn-sm\">
                                                <i class=\"fas fa-eye me-1\"></i>
                                                Detay
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class=\"card\">
                    <div class=\"card-body text-center py-5\">
                        <i class=\"fas fa-folder-open fa-3x text-muted mb-3\"></i>
                        <h4 class=\"text-muted\">Bu Kategoride Ürün Bulunmuyor</h4>
                        <p class=\"text-muted\">@category?.CategoryName kategorisinde henüz hiç ürün eklenmemiş.</p>
                        <a href=\"@Url.Action(\"Index\")\" class=\"btn btn-primary\">
                            <i class=\"fas fa-th-large me-2\"></i>
                            Tüm Ürünleri Görüntüle
                        </a>
                    </div>
                </div>
            }
            
            <!-- Geri Dönüş -->
            <div class=\"row mt-4\">
                <div class=\"col-12 text-center\">
                    <a href=\"@Url.Action(\"Index\")\" class=\"btn btn-secondary\">
                        <i class=\"fas fa-arrow-left me-2\"></i>
                        Menüye Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleSubCategories() {
            var includeSubCategories = $('#includeSubCategories').is(':checked');
            var categoryId = @(category?.ID ?? 0);
            
            if (categoryId > 0) {
                window.location.href = '@Url.Action(\"Category\")' + '/' + categoryId + '?includeSubCategories=' + includeSubCategories;
            }
        }

        // Card hover efekti
        $(document).ready(function() {
            $('.card-hover').hover(
                function() {
                    $(this).addClass('shadow-lg').css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).removeClass('shadow-lg').css('transform', 'translateY(0)');
                }
            );
        });
    </script>
    
    <style>
        .card-hover {
            transition: all 0.3s ease;
        }
        
        .card-img-top {
            transition: transform 0.3s ease;
        }
        
        .card-hover:hover .card-img-top {
            transform: scale(1.05);
        }
    </style>
}