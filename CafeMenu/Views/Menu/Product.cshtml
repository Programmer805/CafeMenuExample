@model Domain.DTOs.ProductDto

@{
    ViewBag.Title = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        <a href="@Url.Action("Index")" class="text-muted">
                            <i class="fas fa-arrow-left me-1"></i>
                            Menüye Dön
                        </a>
                    </div>
                    <h2 class="page-title">
                        @Model.ProductName
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" class="img-fluid rounded-start h-100" alt="@Model.ProductName" style="object-fit: cover; min-height: 300px;">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light rounded-start h-100" style="min-height: 300px;">
                                        <i class="fas fa-image fa-4x text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="card-body h-100 d-flex flex-column">
                                    <h4 class="card-title mb-3">@Model.ProductName</h4>
                                    
                                    <p class="text-muted mb-3">
                                        <i class="fas fa-tag me-2"></i>
                                        <strong>Kategori:</strong> @Model.CategoryName
                                    </p>
                                    
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <div class="mb-4 flex-grow-1">
                                            <h6 class="text-muted mb-2">Açıklama</h6>
                                            <p class="card-text">@Model.Description</p>
                                        </div>
                                    }
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="price-container">
                                                    @if (ViewBag.ExchangeRate != null && (decimal)ViewBag.ExchangeRate != 1.0m)
                                                    {
                                                        var fromCurrency = Request.QueryString["from"] ?? "TRY";
                                                        var toCurrency = Request.QueryString["to"] ?? "USD";
                                                        var convertedPrice = Model.Price * (decimal)ViewBag.ExchangeRate;
                                                        
                                                        <div class="price-main">
                                                            <span class="h3 text-primary mb-0">@Model.Price.ToString("N2") @fromCurrency</span>
                                                        </div>
                                                        <div class="price-secondary mt-1">
                                                            <small class="text-muted">(@convertedPrice.ToString("N2") @toCurrency)</small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="price-main">
                                                            <span class="h3 text-primary mb-0">@Model.Price.ToString("N2") TRY</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <!-- Ürün Özellikleri -->
                    @if (Model.ProductProperties != null && Model.ProductProperties.Any())
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-list-ul me-2"></i>
                                    Ürün Özellikleri
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    @foreach (var property in Model.ProductProperties)
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="row align-items-center">
                                                <div class="col">
                                                    <strong>@property.PropertyKey:</strong>
                                                </div>
                                                <div class="col-auto">
                                                    <span class="badge bg-primary">@property.PropertyValue</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    
                    <!-- Ürün Bilgileri -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle me-2"></i>
                                Ürün Bilgileri
                            </h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-6">Kategori:</dt>
                                <dd class="col-6">@Model.CategoryName</dd>
                                
                                <dt class="col-6">Ürün Kodu:</dt>
                                <dd class="col-6">#@Model.ID.ToString().PadLeft(6, '0')</dd>
                                
                                <dt class="col-6">Eklenme:</dt>
                                <dd class="col-6">@Model.CreatedDate.ToString("dd.MM.yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <!-- Kategorideki Diğer Ürünler -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-utensils me-2"></i>
                                Bu Kategorideki Diğer Ürünler
                            </h3>
                        </div>
                        <div class="card-body">
                            <a href="@Url.Action("Index", new { categoryId = Model.CategoryID })" class="btn btn-outline-primary w-100">
                                <i class="fas fa-eye me-2"></i>
                                @Model.CategoryName Kategorisini Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Geri Dönüş -->
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Menüye Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-img-top {
            transition: transform 0.3s ease;
        }
        
        .card:hover .card-img-top {
            transform: scale(1.02);
        }
    </style>
}