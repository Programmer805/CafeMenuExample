@model Domain.DTOs.CategoryCreateDto
@{
    ViewBag.Title = "Yeni Kategori Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <h2 class="page-title">
                                <i class="fas fa-tags"></i> Yeni Kategori Oluştur
                            </h2>
                        </div>
                        <div class="col-auto ms-auto d-print-none">
                            <div class="btn-list">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Kategoriler
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="row row-deck row-cards">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Kategori Bilgileri</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "row g-3" }))
                            {
                                @Html.AntiForgeryToken()
                                
                                <div class="col-md-12">
                                    <label for="CategoryName" class="form-label">Kategori Adı <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", placeholder = "Kategori adını giriniz" })
                                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-12">
                                    <label for="ParentCategoryID" class="form-label">Üst Kategori</label>
                                    @Html.DropDownListFor(m => m.ParentCategoryID, ViewBag.ParentCategories as SelectList, 
                                        "-- Ana Kategori --", new { @class = "form-control" })
                                    <small class="form-text text-muted">
                                        Bu kategoriyi başka bir kategorinin altında oluşturmak istiyorsanız üst kategoriyi seçin.
                                    </small>
                                    @Html.ValidationMessageFor(m => m.ParentCategoryID, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-12">
                                    <div class="card-footer text-end">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Kategori Oluştur
                                        </button>
                                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> İptal
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Yardım</h3>
                        </div>
                        <div class="card-body">
                            <h4>Kategori Yapısı</h4>
                            <p class="text-muted">
                                Kategoriler hiyerarşik bir yapıya sahiptir. Ana kategoriler oluşturup bunların altında alt kategoriler tanımlayabilirsiniz.
                            </p>
                            
                            <h4>Örnekler</h4>
                            <ul class="text-muted">
                                <li><strong>Ana Kategori:</strong> İçecekler</li>
                                <li><strong>Alt Kategori:</strong> Sıcak İçecekler, Soğuk İçecekler</li>
                            </ul>
                            
                            <h4>Dikkat Edilecekler</h4>
                            <ul class="text-muted">
                                <li>Kategori adı benzersiz olmalıdır</li>
                                <li>Ana kategoriler üst kategori olmadan oluşturulur</li>
                                <li>Alt kategoriler sadece var olan kategorilerin altında oluşturulabilir</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Mevcut Kategori Yapısı</h3>
                        </div>
                        <div class="card-body">
                            <div id="categoryTree">
                                <div class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Yükleniyor...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
$(document).ready(function() {
    loadCategoryTree();
});

function loadCategoryTree() {
    $.get('@Url.Action("GetHierarchy")')
        .done(function(response) {
            if (response.Success && response.Data) {
                renderCategoryTree(response.Data);
            } else {
                $('#categoryTree').html('<p class="text-muted">Kategori yapısı yüklenemedi.</p>');
            }
        })
        .fail(function() {
            $('#categoryTree').html('<p class="text-danger">Kategori yapısı yüklenirken hata oluştu.</p>');
        });
}

function renderCategoryTree(categories) {
    const rootCategories = categories.filter(c => !c.ParentCategoryID);
    let html = '';

    if (rootCategories.length === 0) {
        html = '<p class="text-muted">Henüz kategori bulunmuyor.</p>';
    } else {
        html = '<ul class="list-unstyled">';
        rootCategories.forEach(category => {
            html += renderCategoryNode(category, categories);
        });
        html += '</ul>';
    }

    $('#categoryTree').html(html);
}

function renderCategoryNode(category, allCategories) {
    const children = allCategories.filter(c => c.ParentCategoryID === category.ID);
    let html = `
        <li class="mb-1">
            <div class="d-flex align-items-center">
                <i class="fas fa-tag text-primary me-2"></i>
                <span>${category.CategoryName}</span>
            </div>
    `;

    if (children.length > 0) {
        html += '<ul class="list-unstyled ms-3 mt-1">';
        children.forEach(child => {
            html += renderCategoryNode(child, allCategories);
        });
        html += '</ul>';
    }

    html += '</li>';
    return html;
}
</script>
}